{% comment %}
  SECCIÓN TRENDING NOW - Productos más vendidos
  Diseño moderno con efectos hover y quick add
{% endcomment %}

<section class="youth-section" id="trending-section">
  <div class="section-container">
    <h2 class="youth-section-title">
      {{ section.settings.section_title | default: "TRENDING NOW" | escape }}
    </h2>
    
    {% if section.settings.section_subtitle != blank %}
      <p class="youth-section-subtitle">
        {{ section.settings.section_subtitle | escape }}
      </p>
    {% endif %}
    
    <div class="youth-product-grid" data-grid-type="trending">
      {% assign trending_products = collections[section.settings.collection].products %}
      {% assign max_products = section.settings.products_to_show | default: 8 %}
      
      {% for product in trending_products limit: max_products %}
        <div class="youth-product-card" data-product-id="{{ product.id }}">
          <div class="youth-product-image">
            {% if product.featured_media %}
              <img 
                src="{{ product.featured_media | image_url: width: 400 }}" 
                alt="{{ product.featured_media.alt | escape }}"
                loading="lazy"
                width="400"
                height="500"
              >
              
              {% comment %} Segunda imagen en hover {% endcomment %}
              {% if product.media[1] %}
                <img 
                  class="youth-hover-image"
                  src="{{ product.media[1] | image_url: width: 400 }}" 
                  alt="{{ product.media[1].alt | escape }}"
                  loading="lazy"
                  width="400"
                  height="500"
                >
              {% endif %}
            {% else %}
              <div class="youth-placeholder-image">
                <span>{{ product.title | truncate: 20 | escape }}</span>
              </div>
            {% endif %}
            
            {% comment %} Etiquetas especiales {% endcomment %}
            {% if product.compare_at_price > product.price %}
              <div class="youth-badge youth-badge--sale">
                -{{ product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price }}%
              </div>
            {% endif %}
            
            {% if product.tags contains 'new' %}
              <div class="youth-badge youth-badge--new">NUEVO</div>
            {% endif %}
            
            {% comment %} Botón Quick Add {% endcomment %}
            <button 
              class="youth-quick-add" 
              type="button"
              data-product-handle="{{ product.handle }}"
              data-variant-id="{{ product.selected_or_first_available_variant.id }}"
              {% unless product.available %}disabled{% endunless %}
            >
              {% if product.available %}
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12 5V19M5 12H19" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                </svg>
              {% else %}
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M18 6L6 18M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                </svg>
              {% endif %}
            </button>
          </div>
          
          <div class="youth-product-info">
            <h3 class="youth-product-title">
              <a href="{{ product.url }}">{{ product.title | escape }}</a>
            </h3>
            
            <div class="youth-product-price">
              {% if product.compare_at_price > product.price %}
                <span class="youth-price-sale">{{ product.price | money }}</span>
                <span class="youth-price-compare">{{ product.compare_at_price | money }}</span>
              {% else %}
                <span class="youth-price-regular">{{ product.price | money }}</span>
              {% endif %}
            </div>
            
            {% comment %} Colores disponibles {% endcomment %}
            {% if product.options contains 'Color' %}
              <div class="youth-color-swatches">
                {% assign color_option = product.options_with_values | where: 'name', 'Color' | first %}
                {% for value in color_option.values limit: 4 %}
                  <span 
                    class="youth-color-swatch" 
                    style="background-color: {{ value | downcase | replace: ' ', '' }}"
                    title="{{ value | escape }}"
                  ></span>
                {% endfor %}
                {% if color_option.values.size > 4 %}
                  <span class="youth-color-more">+{{ color_option.values.size | minus: 4 }}</span>
                {% endif %}
              </div>
            {% endif %}
            
            {% comment %} Rating si está disponible {% endcomment %}
            {% if product.metafields.reviews.rating.value %}
              <div class="youth-product-rating">
                {% assign rating = product.metafields.reviews.rating.value %}
                {% for i in (1..5) %}
                  {% if i <= rating %}
                    <span class="youth-star youth-star--filled">★</span>
                  {% else %}
                    <span class="youth-star">☆</span>
                  {% endif %}
                {% endfor %}
                <span class="youth-rating-count">({{ product.metafields.reviews.rating_count.value | default: '0' }})</span>
              </div>
            {% endif %}
          </div>
        </div>
      {% else %}
        {% comment %} Placeholder products {% endcomment %}
        {% for i in (1..4) %}
          <div class="youth-product-card youth-placeholder">
            <div class="youth-product-image youth-shimmer"></div>
            <div class="youth-product-info">
              <div class="youth-shimmer" style="height: 20px; margin-bottom: 8px;"></div>
              <div class="youth-shimmer" style="height: 24px; width: 60%;"></div>
            </div>
          </div>
        {% endfor %}
      {% endfor %}
    </div>
    
    {% if section.settings.show_view_all %}
      <div class="youth-section-footer">
        <a href="{{ collections[section.settings.collection].url | default: '/collections/all' }}" 
           class="btn-youth-primary">
          {{ section.settings.view_all_text | default: "VER TODO" | escape }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

<style>
  .youth-section-subtitle {
    text-align: center;
    color: #666;
    font-size: 1.1rem;
    margin-bottom: var(--spacing-youth-lg);
    font-family: var(--font-youth-body);
  }
  
  .youth-product-info {
    padding: var(--spacing-youth-sm);
  }
  
  .youth-product-title a {
    color: var(--youth-dark);
    text-decoration: none;
    font-family: var(--font-youth-body);
    font-weight: 600;
    font-size: 1rem;
    line-height: 1.3;
    display: block;
    margin-bottom: 8px;
    transition: var(--youth-transition);
  }
  
  .youth-product-title a:hover {
    color: var(--youth-primary);
  }
  
  .youth-product-price {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: var(--spacing-youth-xs);
  }
  
  .youth-price-sale {
    color: var(--youth-primary);
    font-weight: 700;
    font-size: 1.1rem;
  }
  
  .youth-price-compare {
    color: #999;
    text-decoration: line-through;
    font-size: 0.9rem;
  }
  
  .youth-price-regular {
    color: var(--youth-dark);
    font-weight: 600;
    font-size: 1.1rem;
  }
  
  .youth-color-swatches {
    display: flex;
    align-items: center;
    gap: 6px;
    margin-bottom: var(--spacing-youth-xs);
  }
  
  .youth-color-swatch {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    border: 2px solid #ddd;
    cursor: pointer;
    transition: var(--youth-transition);
  }
  
  .youth-color-swatch:hover {
    transform: scale(1.2);
    border-color: var(--youth-primary);
  }
  
  .youth-color-more {
    font-size: 0.8rem;
    color: #666;
    font-weight: 500;
  }
  
  .youth-badge {
    position: absolute;
    top: 12px;
    left: 12px;
    padding: 4px 8px;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    z-index: 2;
  }
  
  .youth-badge--sale {
    background: var(--youth-primary);
    color: white;
  }
  
  .youth-badge--new {
    background: var(--youth-accent);
    color: var(--youth-dark);
  }
  
  .youth-hover-image {
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
    transition: var(--youth-transition);
  }
  
  .youth-product-card:hover .youth-hover-image {
    opacity: 1;
  }
  
  .youth-product-rating {
    display: flex;
    align-items: center;
    gap: 4px;
  }
  
  .youth-star {
    color: var(--youth-accent);
    font-size: 0.9rem;
  }
  
  .youth-star--filled {
    color: var(--youth-accent);
  }
  
  .youth-rating-count {
    font-size: 0.8rem;
    color: #666;
    margin-left: 4px;
  }
  
  .youth-section-footer {
    text-align: center;
    margin-top: var(--spacing-youth-lg);
  }
  
  .youth-placeholder-image {
    background: linear-gradient(135deg, #f0f0f0, #e0e0e0);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #999;
    font-weight: 500;
    height: 100%;
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Quick Add functionality
  const quickAddButtons = document.querySelectorAll('.youth-quick-add');
  
  quickAddButtons.forEach(button => {
    button.addEventListener('click', function(e) {
      e.preventDefault();
      const variantId = this.dataset.variantId;
      const productHandle = this.dataset.productHandle;
      
      if (variantId) {
        // Add loading state
        this.classList.add('loading');
        
        // Add to cart via AJAX
        fetch('/cart/add.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            items: [{
              id: variantId,
              quantity: 1
            }]
          })
        })
        .then(response => response.json())
        .then(data => {
          // Success feedback
          this.innerHTML = '✓';
          this.style.background = 'var(--youth-secondary)';
          
          // Update cart count if exists
          const cartCount = document.querySelector('.cart-count');
          if (cartCount) {
            cartCount.textContent = parseInt(cartCount.textContent) + 1;
          }
          
          setTimeout(() => {
            this.classList.remove('loading');
            this.innerHTML = '+';
            this.style.background = '';
          }, 2000);
        })
        .catch(error => {
          console.error('Error adding to cart:', error);
          this.classList.remove('loading');
        });
      }
    });
  });
});
</script>

{% schema %}
{
  "name": "Youth Trending Products",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Título de sección",
      "default": "TRENDING NOW"
    },
    {
      "type": "textarea",
      "id": "section_subtitle",
      "label": "Subtítulo",
      "default": "Los productos que todo el mundo quiere"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Colección",
      "info": "Selecciona la colección de productos trending"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 4,
      "max": 12,
      "step": 2,
      "label": "Productos a mostrar",
      "default": 8
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Mostrar botón 'Ver todo'",
      "default": true
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "Texto botón 'Ver todo'",
      "default": "VER TODO"
    }
  ],
  "presets": [
    {
      "name": "Youth Trending Products"
    }
  ]
}
{% endschema %}
