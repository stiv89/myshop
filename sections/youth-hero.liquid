{% comment %}
  YOUTH HERO SECTION - Diseñado para moda juvenil
  Incluye: Texto impactante, CTAs llamativos, imagen de fondo
{% endcomment %}

<section class="youth-hero" id="youth-hero-section">
  {% if section.settings.hero_image %}
    <div class="youth-hero__background">
      <img 
        src="{{ section.settings.hero_image | image_url: width: 1920 }}" 
        alt="{{ section.settings.hero_image.alt | escape }}"
        loading="eager"
        width="1920"
        height="1080"
      >
    </div>
  {% endif %}
  
  <div class="youth-hero__overlay"></div>
  
  <div class="youth-hero__content youth-animate-in">
    {% if section.settings.hero_title != blank %}
      <h1 class="youth-hero__title">
        {{ section.settings.hero_title | escape }}
      </h1>
    {% endif %}
    
    {% if section.settings.hero_subtitle != blank %}
      <p class="youth-hero__subtitle">
        {{ section.settings.hero_subtitle | escape }}
      </p>
    {% endif %}
    
    <div class="youth-hero__cta-group">
      {% if section.settings.primary_button_label != blank %}
        <a href="{{ section.settings.primary_button_link | default: '/collections/all' }}" 
           class="btn-youth-primary">
          {{ section.settings.primary_button_label | escape }}
        </a>
      {% endif %}
      
      {% if section.settings.secondary_button_label != blank %}
        <a href="{{ section.settings.secondary_button_link | default: '/collections' }}" 
           class="btn-youth-secondary">
          {{ section.settings.secondary_button_label | escape }}
        </a>
      {% endif %}
    </div>
  </div>
  
  {% comment %} Elemento decorativo móvil {% endcomment %}
  <div class="youth-hero__scroll-indicator">
    <div class="youth-scroll-arrow"></div>
  </div>
</section>

<style>
  .youth-hero__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }
  
  .youth-hero__background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .youth-hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.4);
    z-index: 1;
  }
  
  .youth-hero__scroll-indicator {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 3;
  }
  
  .youth-scroll-arrow {
    width: 24px;
    height: 24px;
    border: 2px solid white;
    border-top: none;
    border-left: none;
    transform: rotate(45deg);
    animation: bounce 2s infinite;
  }
  
  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% { transform: rotate(45deg) translateY(0); }
    40% { transform: rotate(45deg) translateY(-10px); }
    60% { transform: rotate(45deg) translateY(-5px); }
  }
  
  @media (max-width: 768px) {
    .youth-hero__background {
      background: var(--youth-gradient-hero);
    }
    
    .youth-hero__background img {
      opacity: 0.3;
      mix-blend-mode: overlay;
    }
  }
</style>

{% schema %}
{
  "name": "Youth Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Imagen de fondo",
      "info": "Tamaño recomendado: 1920x1080px. Usa imágenes de jóvenes usando tu ropa."
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "Título principal",
      "default": "TU ESTILO, TU ACTITUD",
      "info": "Usa frases cortas e impactantes"
    },
    {
      "type": "textarea",
      "id": "hero_subtitle",
      "label": "Subtítulo",
      "default": "Moda urbana que habla tu idioma",
      "info": "Descripción que conecte con jóvenes"
    },
    {
      "type": "header",
      "content": "Botones de acción"
    },
    {
      "type": "text",
      "id": "primary_button_label",
      "label": "Botón principal - Texto",
      "default": "DESCUBRE TU LOOK"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Botón principal - Enlace",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "secondary_button_label",
      "label": "Botón secundario - Texto",
      "default": "VER COLECCIÓN"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Botón secundario - Enlace",
      "default": "/collections"
    }
  ],
  "presets": [
    {
      "name": "Youth Hero"
    }
  ]
}
{% endschema %}
